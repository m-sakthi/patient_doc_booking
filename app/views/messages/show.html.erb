<div class="card my-3 ">
  <h5 class="card-header">
    <% if @message.outbox.user.is_doctor? %>Dr.<% end %>
    <%= @message.outbox.user.full_name %>
  </h5>
  <div class="card-body">
    <p class="card-text"><%= @message.body %></p>
    <%= link_to "Reply", new_message_path, class: "btn btn-primary" %>
    <a href="#" class="btn btn-primary">I've lost my prescription</a>
    <% if !@message.read %>
      <%= link_to "Mark as read", mark_as_read_message_path(id: @message.id), data: { "turbo-method": :patch }, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>